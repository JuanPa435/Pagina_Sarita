{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Iniciar Backend Node.js",
            "type": "shell",
            "command": "node",
            "args": ["backend/save-data.js"],
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^.*$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*Servidor backend corriendo.*$",
                    "endsPattern": "^.*Servidor backend corriendo.*$"
                }
            },
            "runOptions": {
                "runOn": "folderOpen"
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}
