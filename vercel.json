{
  "version": 2,
  "builds": [
    {
      "src": "conexion/vercel_handler.py",
      "use": "@vercel/python"
    },
    { "src": "index.html", "use": "@vercel/static" },
    { "src": "config.js", "use": "@vercel/static" },
    { "src": "index.js", "use": "@vercel/static" },
    { "src": "paginas/**", "use": "@vercel/static" }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "conexion/vercel_handler.py"
    },
    {
      "src": "/(.*\\.(css|js|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot))",
      "dest": "/$1"
    },
    {
      "src": "/paginas/(.*)",
      "dest": "/paginas/$1"
    },
    {
      "src": "/",
      "dest": "/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
